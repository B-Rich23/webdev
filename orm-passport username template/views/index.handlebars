<div class="container">
    <div class="row">
      <div class="col-md-12">
        <img src="/assets/img/yummy-burger.jpg" alt="burger" class="img-responsive center-block">
      </div>
    </div>
  
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-center">Eat-Da-Burger</h2>
      </div>
    </div>
  
    <div id="uneaten" class="row">
      <div class="col-md-5">
        <h3>Uneaten Burgers</h3>
        <ul>
          {{#each burgers}} {{#unless devoured}}
          <li>
            <h5>{{id}}. {{burger_name}}
              <form action='/burger/eat/{{id}}?_method=PUT' method='POST'>
                {{!-- <input type='hidden' name='_METHOD' value='PUT'> --}}
                <button type='submit' class="btn btn-default">EAT THIS!</button>
              </form>
            </h5>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>
  
      <div class="col-md-2"></div>
  
      <div class="col-md-5">
        <h3 class="eaten">Eaten Burgers</h3>
        <ul>
          {{#each burgers}} {{#if devoured}}
          <li>
          <h5 class="text">{{id}}. {{burger_name}}</h5>
          </li>
          {{/if}} {{/each}}
        </ul>
      </div>
  </div>
  
    <br>
    <br>
  
    <div class="row">
  
      <div class="col-md-12 text-center">
        <form id="create" class="create-form" action="/burger/create" method="POST">
          <div class="form-group">
            <textarea type="text" name="burger_name"></textarea>
            <br>
            <button class="btn btn-default" type="submit">Submit</button>
            <h6 class="text-center">Enter a burger you want to eat and click Submit!</h6>
          </div>
        </form>
      </div>
    </div>
  </div>
